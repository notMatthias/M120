<Window x:Class="M120_Kombinationsprojekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:M120_Kombinationsprojekt"
        mc:Ignorable="d"
        Title="Bestellverwaltung" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TabControl>
            <TabItem Header="Kunde">
                <Frame Source="Main/Customer.xaml"></Frame>
            </TabItem>
            <TabItem Header="Inventar">
                <Frame Source="Main/Inventory.xaml"></Frame>
            </TabItem>
            <TabItem Header="Bestellung" IsSelected="True">
                <Frame Source="Main/Order.xaml"></Frame>
            </TabItem>
        </TabControl>
        <Label HorizontalAlignment="Right" Margin="0,0,150,0" Height="22" VerticalAlignment="Top" Padding="5,2,5,0">Suche</Label>
        <TextBox HorizontalAlignment="Right" Width="150" Height="20" VerticalAlignment="Top" Margin="0,1,2,1" Padding="0" />
    </Grid>
</Window>
