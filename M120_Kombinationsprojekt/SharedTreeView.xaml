<Page x:Class="M120_Kombinationsprojekt.SharedTreeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    WindowWidth="500"
    WindowHeight="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TreeView Grid.ColumnSpan="2">
            <TreeViewItem Header="Früchte">
                <TreeViewItem Header="Apfel" />
                <TreeViewItem Header="Birne" />
            </TreeViewItem>
            <TreeViewItem Header="Gemüse">
                <TreeViewItem Header="Erbse" />
                <TreeViewItem Header="Salat" />
            </TreeViewItem>
        </TreeView>
    </Grid>
</Page>